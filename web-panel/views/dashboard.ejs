    <script>
        // Enhanced JavaScript functions
        function refreshStats() {
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Actualisation...';
            btn.disabled = true;
            
            fetch('/api/stats')
                .then(response => response.json())
                .then(data => {
                    // Update stats in real-time
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                        showNotification('Statistiques actualis√©es !', 'success');
                    }, 1000);
                })
                .catch(error => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                    showNotification('Erreur lors de l\'actualisation', 'error');
                });
        }
        
        function restartBot() {
            if (confirm('‚ö†Ô∏è √ätes-vous s√ªr de vouloir red√©marrer le bot ?\n\nCela interrompra temporairement tous les services.')) {
                showNotification('Red√©marrage du bot en cours...', 'info');
                fetch('/api/owner/restart', { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        showNotification(data.message || 'Bot red√©marr√© avec succ√®s !', 'success');
                    })
                    .catch(error => {
                        showNotification('Erreur lors du red√©marrage', 'error');
                    });
            }
        }
        
        function reloadCommands() {
            showNotification('Rechargement des commandes...', 'info');
            fetch('/api/owner/reload-commands', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    showNotification(data.message || 'Commandes recharg√©es !', 'success');
                })
                .catch(error => {
                    showNotification('Erreur lors du rechargement', 'error');
                });
        }
        
        function viewLogs() {
            window.open('/logs', '_blank');
        }
        
        function backupData() {
            showNotification('G√©n√©ration du backup...', 'info');
            window.location.href = '/api/owner/backup-all';
        }
        
        function exportData() {
            showNotification('Export des donn√©es...', 'info');
            window.location.href = '/api/export/dashboard-data';
        }
        
        function showNotification(message, type = 'info') {
            const colors = {
                success: '#43e97b',
                error: '#f5576c',
                warning: '#f093fb',
                info: '#4facfe'
            };
            
            const notification = document.createElement('div');
            notification.className = 'position-fixed top-0 end-0 m-3 p-3 rounded glass-card';
            notification.style.zIndex = '9999';
            notification.style.background = colors[type];
            notification.style.color = 'white';
            notification.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'times' : type === 'warning' ? 'exclamation' : 'info'}-circle me-2"></i>
                    ${message}
                </div>
            `;
            
